{{#section head}}
    <link rel="stylesheet" href="/assets/owl-carousel-dis/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="/assets/owl-carousel-dis/assets/owl.theme.default.min.css">
{{/section}}
    <form action="/galleryUpload" method="post">
        <div class="row">
            <div class="col-sm-12 col-md-6">
                <div class="imageView" style="height: 65vh; width:100%; background-color: gray;">

                </div>
                <input type="file" name="galleryImage" class="form-file-control mt-2" id="galleryImage">
            </div>
            <div class="col-sm-12 col-md-6">
                <div class="form-group">
                    <label for="title">ADD TITLE</label>
                    <input type="text" name="galleryTitle" id="title" class="form-control">
                </div>
                <div class="form-group">
                    <label for="description">ADD DESCRIPTION</label>
                    <textarea name="galleryDesc" id="description" class="form-control" cols="30" rows="10"></textarea>
                </div>
                <input type="submit" class="btn btn-info text-right mt-2" style="float: right;" value="Upload Photo">
            </div>
        </div> 
    </form>
    <div class="container-fluid">
        <div class="owl-carousel owl-theme">
            <div class="item">
                <img src="" alt="">
            </div>
        </div>
    </div>
<script type="text/javascript">
    // owl-carousel script
        $('.owl-carousel').owlCarousel({
            loop:true,
            margin:10,
            nav:true,
            responsive:{
                0:{
                    items:2
                },
                650:{
                    items:3
                },
                1000:{
                    items:5
                }
            }
        })
    </script>
{{!-- Owl carousel script --}}
{{#section javascripts}}
    <script src="/assets/owl-carousel-dis/owl.carousel.min.js"></script>
{{/section}}