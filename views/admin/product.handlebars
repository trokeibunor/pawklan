{{#section 'head'}}
    <link rel="stylesheet" href="/stylesheets/products.css">
{{/section}}
<div class="container-fluid">
    <h4>Products</h4>
    <div class="card-body table-responsive p-0 " style="height: 300px;">
        <table class="table table-head-fixed text-nowrap">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>price</th>
                <th>Added By</th>
                <th>Edited By</th>
                <th>Packeges Sokd</th>
                <th>Stock Left</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            </thead>
            {{#each products}}
            <tbody>
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>{{category}}</td>
                    <td>{{sku}}</td>
                    <td>{{price}}</td>
                    <td>{{addedby}}</td>
                    <td>{{editedby}}</td>
                    <td>{{packagesSold}}</td>
                    <td>{{stockLeft}}</td>
                    <td><a href="/edit-product?id={{id}}" class="btn btn-link edit-button"><i class="far fa-edit"></i></a></td>
                    <td><a href="/delete-product?id={{id}}" class="btn btn-link delete-button"><i class="far fa-trash-alt"></i></a></td>
                </tr>
            </tbody>
            {{/each}}
        </table>
    </div>
