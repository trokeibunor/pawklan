<section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-3">
            <a href="/inbox" class="btn btn-primary btn-block mb-3">Back to Inbox</a>

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Folders</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i>
                  </button>
                </div>
              </div>
              <div class="card-body p-0">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item active">
                        <a href="/inbox" class="nav-link">
                        <i class="fas fa-inbox"></i> Inbox
                        <span class="badge bg-primary float-right">10</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/sent" class="nav-link">
                        <i class="far fa-envelope"></i> Sent
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/drafts" class="nav-link">
                        <i class="far fa-file-alt"></i> Drafts
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/compose" class="nav-link">
                            <i class="far fa-file-alt"></i> Compose
                        </a>
                    </li>
                </ul>
              </div>
              <!-- /.card-body -->
            </div>
            
          </div>
          <!-- /.col -->
        <div class="col-md-9">
          <div class="card card-primary card-outline">
            <div class="card-header">
              <h3 class="card-title">Read Mail</h3>

            </div>
            <!-- /.card-header -->
            {{#each messages}}
            <div class="card-body p-0">
              <div class="mailbox-read-info">
                <h5>{{subject}}</h5>
                <h6>From: {{sender}}
                  <span class="mailbox-read-time float-right">{{time}}</span></h6>
              </div>
              <div class="mailbox-read-message">
                {{content}}
              </div>
              <!-- /.mailbox-read-info -->
              <div class="mailbox-controls with-border text-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Delete">
                    <i class="far fa-trash-alt"></i></button>
                  <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Reply">
                    <i class="fas fa-reply"></i></button>
                </div>
                <!-- /.btn-group -->
              </div>
              <!-- /.mailbox-controls -->
              <div class="mailbox-read-message">
                
              </div>
              <!-- /.mailbox-read-message -->
            </div>
            {{/each}}
            <!-- /.card-footer -->
            <div class="card-footer">
              <div class="float-right">
                <a href="/compose" type="button" class="btn btn-default"><i class="fas fa-reply"></i> Reply</a>
              </div>
              <button type="button" class="btn btn-default"><i class="far fa-trash-alt"></i> Delete</button>
            </div>
            <!-- /.card-footer -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      </div><!-- /.container-fluid -->
    </section>