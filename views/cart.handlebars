{{!-- Start cart --}}
<div class="col-sm-10 col-md-6 mx-auto">
    <div class="card shadow">
        <div class="card-body">
                <div class="row">
                    <div class="col-8">
                        <h2>Cart</h2>
                    </div>
                    <div class="col-4">
                        <h6><a href="/cart/remove">Empty cart</a></h6>
                    </div>
                </div>
                {{#if cart}}
                    <table class="table table-responsive">
                        <thead class="shadow">
                            <tr>
                                <th>Item</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Colour</th>
                                <th>Size</th>
                                <th>Price Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        {{#each this}}
                        <tbody>
                            {{#each items}}
                                <tr>
                                    <td><a href="/viewProduct?id={{item}}">{{name}}</a></td>
                                    <td>{{qty}}</td>
                                    <td>{{price}}</td>
                                    <td>{{colour}}</td>
                                    <td>{{size}}</td>
                                    <td>{{itemvalue}}</td>
                                </tr>
                            {{/each}}
                        </tbody>
                        {{/each}}
                    </table>
                    
                        <div class="row">
                            
                                <div class="col-sm-6 col-md-6">
                                    
                                    <h4 id="total">Total: <strong>$
                                        {{#each this}}
                                        {{total}}
                                        {{/each}}
                                        </strong> </h4>
                                    
                                </div>
                            
                        <div class="col-sm-6 col-md-6"></div>
                    </div>
                    
                    
                    {{else}}
                        <div class="row">
                            <p class="lead m-3 small">There are no items in your cart</p>
                        </div>
                {{/if}}
        </div>
    </div>
</div>
