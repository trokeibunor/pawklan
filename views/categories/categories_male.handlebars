</div>

{{#section 'javascript'}}
    <script>
        $('document').ready(function(){
            $('.owl-carousel').owlCarousel({
                loop: true,
                margin:10,
                nav:true,
                autoWidth: true,
                responsiveClass: true,
                responsive:{
                    0:{
                        items:2
                    },
                    600:{
                        items:3
                    },
                    1000:{
                        items:5
                    }
                }
            });
        })
    </script>
{{/section}}
