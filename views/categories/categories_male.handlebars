
<div class="container-fluid">
    <h3>Male Category</h3>
    {{#if tops}}
        <h4>Tops & Jackets</h4>
            <div class="owl-carousel owl-theme" id="owl-one">
            {{#each tops}}
                <div class="item" style="width: 15rem;">
                    <a href="/viewProduct?id={{id}}" class="image-container">
                        <img src="{{image}}" alt="" style="height: 300px;"
                        class="shadow-lg card-img" id="carousel-image shadow-lg">
                    </a>
                    <div id="details" class="shadow-lg">
                        <p id="discount" class="badge badge-success">{{discount}}% off</p>
                        <p class="product-text">{{name}}</p>
                        <p class="price-text">${{price}}.00</p>
                    </div>   
                </div>
            {{/each}}       
        </div>
    {{/if}}
    {{#if pants}}
        <h4>Pants & Shorts</h4>
       <div class="owl-carousel owl-theme" id="owl-one">
