<body>
    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar" class="shadow-lg">
            <div class="sidebar-header">
                <h1>Pawklan</h1>
            </div>
            <ul class="list-unstyled components">
                <li class="active">
                    <a href="#Submenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle" >Categories</a>
                    <ul class="collapse list-unstyled" id="Submenu">
                        <li class="active">
                            <a href="/"><span><i class="fas fa-male"></i></span> Men's Fashion</a>
                        </li>
                        <li>
                            <a href="#"><span><i class="fas fa-female"></i></span> Ladies's wears</a>
                        </li>
                        <li>
                            <a href="#"><span><i class="fas fa-child"></i></span> Children</a>
                        </li>
                        <li>
                            <a href="#"><span><i class="fab fa-redhat"></i></span> Headwear</a>
                        </li>
                        <li>
                            <a href="#">Accessories</a>
                        </li>
                        <li>
                            <a href="#">Footwears</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="/about">Our Brand</a>
                </li>
                <li>
                    <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Pawklan Pages</a>
                    <ul class="collapse list-unstyled" id="pageSubmenu">
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li>
                            <a href="/shop">Shop</a>
                        </li>
                        <li>
                            <a href="/about">Brand</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#">Gallery</a>
                </li>
                <li>
                    <a href="/about#contact">Contact Us</a>
                </li>
            </ul>
            <hr class="line">
            <ul class="list-unstyled">
                <li><p class="text-muted">Developed by TrexTech &copy;2020</p></li>
            </ul>

        </nav>

        <!-- Page Content  -->
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-dark shadow-lg">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-sm">
                        <i class="fas fa-toggle-on" style="color: black;"></i>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" style="background-color: gray;" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-search"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <form action="#" method="post" class="form-inline">
                                <input type="text" name="search-cat" class="form-control" id="search-cat" 
                                placeholder="Search">
                            </form>
                        </ul>
                    </div>
                </div>
            </nav>
            {{!-- Using sessions to display flash messages --}}
            {{#if flash}}
                <div class="alert alert-dismissible alert-{{flash.type}}">
                    <button type="button" class="close"
                    data-dismiss="alert" aria-hidden="true">&times;<button>
                    <strong>{{flash.intro}}</strong> {{{flash.message}}}
                </div>  
            {{/if}}
            {{{body}}}
        </div>
    </div>
    {{>footer}}
    
    <script src="/assets/jquery-3.5.1.js"></script>
    <script src="/assets/owl-carousel-dis/owl.carousel.min.js"></script>
    {{!-- Owl carousel --}}
    <script type="text/javascript">
    // owl-carousel script
        $('.owl-carousel').owlCarousel({
            loop:true,
            margin:10,
            nav:true,
            responsive:{
                0:{
                    items:2
                },
                600:{
                    items:3
                },
                1000:{
                    items:5
                }
            }
        })
    </script>
    <!-- jQuery CDN - Slim version (=without AJAX) -->
