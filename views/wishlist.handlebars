{{#section 'head'}}
    <link rel="stylesheet" href="/stylesheets/cart.css">
{{/section}}
<nav class="navbar navbar-expand-lg navbar-light">
    <span><img src="/images/logoimagepawklan-removebg-preview.png" id="navlogo" alt=""></span>
<a class="navbar-brand" href="#">PawKlan</a>
<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    <li class="nav-item ">
        <a class="nav-link" href="/">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/shop">Shop</a>
    </li>
    <li class="nav-item">
        <a href="/categories" class="nav-link">Categories</a>
    </li>
    <li class="nav-item">
        <a href="/gallery" class="nav-link">Gallery</a>
    </li>
    <li class="nav-item">
        <a href="/about" class="nav-link">Our brand</a>
    </li>
    <li class="nav-item">
        <a href="/cart" class="nav-link">Cart <span class="sr-only">(current)</span></a>
    </li>
    <li class="nav-item active">
        <a href="/wishlist" class="nav-link">WishList</a>
    </li>
    </ul>
    <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" name="searchForm" type="search" placeholder="Search" aria-label="Search">
        {{#if user}}
            <a href="/logout" class="btn ml-2 my-2 my-sm-0 footer-btn" id="loginbtn">
                Log Out
                <span class="fas fa-sign-out-alt" style="color: white;" ></span>
            </a>
            {{else}}
            <a href="/login" class="btn ml-2 my-2 my-sm-0 footer-btn" id="loginbtn">
                Login
                <span class="fas fa-sign-in-alt" style="color: white;"></span>
            </a>
        {{/if}}
    </form>
</div>
</nav>
<div class="wrap">

  <header class="cart-header cf">
    <strong>WishList</strong>
  </header>
  <div class="bonus-products">
    <strong>Store and view your fashion choices</strong>
  </div>
  <div class="cart-table">
    <ul>
<!-- begin variation product w/ option -->
        {{#each this}}
        {{#each items}}
        <li class="item">
            <div class="item-main cf">
            <div class="item-block ib-info cf">
                <img class="product-img" src="{{picture}}" />
                <div class="ib-info-meta">
                <span class="title">{{name}}</span>
                <span class="itemno">{{slug}}</span>
                <span class="itemno">#{{item}}</span>
                <span class="styles">
                    <span class="blue-link"><a href="/viewProduct?id={{item}}">View Details</a></span>
                </span>
                </div>
            </div>
            <div class="item-block ib-qty">
                .
            </div>
            <div class="item-block ib-total-price">
                <span class="tp-price">{{price}} <span class="small">{{currency}}</span></span>
                <span class="tp-remove"><i class="i-cancel-circle"></i></span>
            </div> 
                    
            </div>
            <div class="item-foot cf">
            <div class="if-message"><p> Item/promo related messaging shows up here</p></div>
            <div class="if-left"><span class="if-status">In Stock</span></div>
            <div class="if-right"><a href="/removeGoods?id={{item}}" class="blue-link">Remove From Wishlist</a></div>
            </div>
        </li>
        {{/each}}
        {{/each}}
    </ul>
  </div>
  <div class="sub-table cf">
    <div class="copy-block">    
      <p>Items will be saved in your cart for a day. To save items longer, add them to your Wish List</p>
      <p class="customer-care">
        Call us M-F 8:00 am to 6:00 pm EST<br />
        (877)-555-5555 or <a href="/about#contact">contact us</a>. <br />     
      </p>
    </div>    
  </div>
</div>
{{>footer}}
{{#section 'javascripts'}}
    <script>
        $( ".tax-edit" ).click(function() {
    $(this).toggleClass('te-open').parent;
    $('.tax-calculate').slideToggle(200);
    });

    $( ".if-left" ).click(function() {
    $(this).prev('.if-message').slideToggle(200);
    });

    $( ".bp-toggle" ).click(function() {
    $('.bonus-products').slideToggle(200);
    });
    </script>
{{/section}}